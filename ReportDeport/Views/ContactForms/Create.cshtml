@model ReportDeport.Models.contactForm

    @{
        ViewBag.Title = "Create";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>Contact</h2>

<div class="row">
                <div class="col-md-6" style="border-right: 1px solid rgba(128, 128, 128, 0.32);">
                   @using (Html.BeginForm("Create", "ContactForms", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                   {
                        <fieldset>

                       

                            <!-- Text input-->
                            <div class="form-group">
                              
                                <label class="col-md-3 control-label" for="nameInput" style="text-align:left;">Name</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.name, new { @class = "form-control input-md" , @placeholder = "e.g John Hart" } )

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                             
                                <label class="col-md-3 control-label" for="emailInput" style="text-align:left;">Email Address</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.emailAddress, new { @class = "form-control input-md", @placeholder = "e.g john.hart@hubbleStudios.co.za" })

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                        
                                <label class="col-md-3 control-label" for="positionInput" style="text-align:left;">Position</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.position, new { @class = "form-control input-md", @placeholder = "e.g Human resources manager" })
                                    

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                         
                                <label class="col-md-3 control-label" for="departmentInput" style="text-align:left;">Department</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.department, new { @class = "form-control input-md", @placeholder = "e.g Human resources" })
                                    

                                </div>
                            </div>

                            <!-- Text input-->
                            <div class="form-group">
                              
                                <label class="col-md-3 control-label" for="subjectInput" style="text-align:left;">Subject</label>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.subject, new { @class = "form-control input-md", @placeholder = "e.g login error" })
                                    

                                </div>
                            </div>

                            <!-- Textarea -->
                            <div class="form-group">
                           
                                <label class="col-md-3 control-label" for="messageInput" style="text-align:left;">Message</label>
                                <div class="col-md-12">
                                    @Html.TextAreaFor(m => m.message, new { @class = "form-control input-md", @placeholder = "type message here" })
                                    
                                </div>
                            </div>

                            <!-- Button -->
                            <div class="form-group">
                                
                                <div class="col-md-12">
                                    <button id="Submit" name="Submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>

                        </fieldset>
                    }

                    
                </div>

                <div class="col-md-6">
                    <p style="margin-top: 0;"> Tel: 021 276 0300 </p>
                    <p> Address: <br/>203 Howard Terraces <br/>Corner of Howard & Forest Drive <br/> Pinelands <br /> Cape Town <br /> 7405 </p>
                    <p> Email: support@hubblestudios.com </p>
                </div>

        </div>
   <br/>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }